#!/bin/bash

# Temporary
mkdir -p /home/steam/server/orangebox/tf/cfg

rm -f /home/steam/server/orangebox/tf/cfg/sever.cfg.bak
mv /home/steam/server/orangebox/tf/cfg/server.cfg /home/steam/sever/orangebox/tf/cfg/server.cfg.bak

for CONFIG_NAME in `grep -ri "STEAM_" opt/server.cfg | awk '{ print $2}'`; do
	JUJU_CFG_NAME=`echo "$CONFIG_NAME" | sed 's/STEAM_//'`
	JUJU_CFG_VALUE=`get-config ${JUJU_CFG_NAME,,*}`
	sed "s/${CONFIG_NAME}/${JUJU_CFG_VALUE}/" opt/server.cfg /home/steam/server/orangebox/tf/cfg/server.cfg
done
